generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"

  url = env("DATABASE_URL")
}

model Admin {
  id       Int      @id @default(autoincrement())
  name     String
  email    String   @unique
  password String
  created  DateTime @default(now())
  updated  DateTime @updatedAt
}

model PaymentFee {
  id                      Int    @id @default(autoincrement())
  processingFee           String
  bankTransactionPaperFee String
  insuranceFee            String
  cibilFee                String
  tdsFee                  String
  nocFee                  String
}

model LoanApplication {
  id           Int     @id @default(autoincrement())
  email        String
  phone        String?
  loanAmount   String?
  interest     String?
  loanTenure   String?
  aadharNumber String?
  panNumber    String?
  fullName     String?
  fatherName   String?
  address      String?
  pincode      String?

  // Bank details
  bankName      String?
  accountNumber String?
  ifscCode      String?

  processingFee       Json?
  processingFeeStatus Status @default(PENDING)

  bankTransactionPaperFee Json?
  bankTransactionStatus   Status @default(PENDING)

  insuranceFee    Json?
  insuranceStatus Status @default(PENDING)

  cibilFee    Json?
  cibilStatus Status @default(PENDING)

  tdsFee    Json?
  tdsStatus Status @default(PENDING)

  nocFee    Json?
  nocStatus Status @default(PENDING)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Status {
  PENDING
  APPROVED
  REJECTED
}

model Otp {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  otp       String
  expiresAt DateTime

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Contact {
  id          Int    @id @default(autoincrement())
  email       String
  phoneNumber String
}
